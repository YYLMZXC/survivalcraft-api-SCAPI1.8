<CanvasWidget xmlns="runtime-namespace:Game" Margin="0,10">

	<CanvasWidget Size="700, 420" HorizontalAlignment="Center" VerticalAlignment="Center">

		<RectangleWidget FillColor="80, 80, 80, 255" OutlineColor="120, 120, 120, 160" OutlineThickness="2" />

		<StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 5">

			<StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
        <CanvasWidget Size="700, 40" HorizontalAlignment="Center" VerticalAlignment="Center">
          <LabelWidget Name="Title" Text="" Margin="5, 5" HorizontalAlignment="Center"/>
        </CanvasWidget>
			</StackPanelWidget>

			<CanvasWidget Size="680, 320" Margin="20, 3">

				<RectangleWidget FillColor="0, 0, 0, 255" OutlineColor="20, 20, 20, 128" OutlineThickness="1" />

				<ScrollPanelWidget Name="ScrollPanel" Direction="Vertical" Margin="3, 3" ClampToBounds="true">
					<CanvasWidget HorizontalAlignment="Center" VerticalAlignment="Center">
						<StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" Margin="10, 0" >
							<LabelWidget Name="Content" Text=""  Color="255,255,255" HorizontalAlignment="Center" TextAnchor="HorizontalCenter" WordWrap="true" />
						</StackPanelWidget>
					</CanvasWidget>
				</ScrollPanelWidget>

			</CanvasWidget>

      <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">

        <CanvasWidget Size="405, 40">
          <LabelWidget Name="Time" Text="" Margin="5, 5"/>
        </CanvasWidget>

        <CanvasWidget Size="250, 40">
          <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Far" VerticalAlignment="Center">
            <BevelledButtonWidget Name="UpdateButton" Size="80, 40" VerticalAlignment="Center" HorizontalAlignment="Far" Margin="0, 3">
              <RectangleWidget FillColor="100, 100, 100, 255" OutlineColor="120, 120, 120, 255" IsVisible="true"/>
              <LabelWidget Name="ButtonLabel3" Text="发布" Font="{Fonts/Pericles}" HorizontalAlignment="Center" VerticalAlignment="Center" Color="255, 255, 255, 255" IsVisible="true"/>
            </BevelledButtonWidget>

            <CanvasWidget Size="5, 0" />

            <BevelledButtonWidget Name="EditButton" Size="80, 40" VerticalAlignment="Center" HorizontalAlignment="Far" Margin="0, 3">
              <RectangleWidget FillColor="100, 100, 100, 255" OutlineColor="120, 120, 120, 255" IsVisible="true"/>
              <LabelWidget Name="ButtonLabel2" Text="修改" Font="{Fonts/Pericles}" HorizontalAlignment="Center" VerticalAlignment="Center" Color="255, 255, 255, 255" IsVisible="true"/>
            </BevelledButtonWidget>

            <CanvasWidget Size="5, 0" />

            <BevelledButtonWidget Name="OkButton" Size="80, 40" VerticalAlignment="Center" HorizontalAlignment="Far" Margin="0, 3">
              <RectangleWidget FillColor="100, 100, 100, 255" OutlineColor="120, 120, 120, 255" IsVisible="true"/>
              <LabelWidget Name="ButtonLabel" Text="OK" Font="{Fonts/Pericles}" HorizontalAlignment="Center" VerticalAlignment="Center" Color="255, 255, 255, 255" IsVisible="true"/>
            </BevelledButtonWidget>
          </StackPanelWidget>
        </CanvasWidget>

      </StackPanelWidget>


    </StackPanelWidget>
    
	</CanvasWidget>

</CanvasWidget>

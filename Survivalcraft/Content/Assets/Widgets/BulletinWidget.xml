<CanvasWidget xmlns="runtime-namespace:Game" Margin="0,10">

	<CanvasWidget Size="700, 400" HorizontalAlignment="Center" VerticalAlignment="Center">

		<RectangleWidget FillColor="128, 128, 128, 255" OutlineColor="192, 192, 192, 255" OutlineThickness="2" />

		<StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 5">

			<StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">

				<CanvasWidget Size="515, 40">
					<LabelWidget Name="Title" Text="" VerticalAlignment="Center" Margin="20, 0"/>
				</CanvasWidget>

				<CanvasWidget Size="17, 0"/>

				<BevelledButtonWidget Name="OkButton" Size="40, 40" VerticalAlignment="Center" HorizontalAlignment="Far" Margin="0, 3">
					<RectangleWidget FillColor="140, 140, 140, 255" OutlineColor="120, 120, 120, 255" IsVisible="true"/>
					<LabelWidget Text="C" Font="{Fonts/Pericles}" HorizontalAlignment="Center" VerticalAlignment="Center" Color="255, 255, 255, 255" IsVisible="true"/>
				</BevelledButtonWidget>

			</StackPanelWidget>

			<CanvasWidget Size="680, 320" Margin="20, 3">

				<RectangleWidget FillColor="80, 80, 80, 255" OutlineColor="100, 100, 100, 255" OutlineThickness="1" />

				<ScrollPanelWidget Name="ScrollPanel" Direction="Vertical" Margin="3, 3" ClampToBounds="true">
					<CanvasWidget HorizontalAlignment="Center" VerticalAlignment="Center">
						<StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" Margin="10, 10" >
							<LabelWidget Name="Content" Text=""  Color="255,255,255" HorizontalAlignment="Center" TextAnchor="HorizontalCenter" WordWrap="true" />
						</StackPanelWidget>
					</CanvasWidget>
				</ScrollPanelWidget>

			</CanvasWidget>

			<CanvasWidget Size="0, 10"/>

		</StackPanelWidget>

	</CanvasWidget>

</CanvasWidget>
